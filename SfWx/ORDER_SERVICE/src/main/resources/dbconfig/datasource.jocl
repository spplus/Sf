#***********************多数据源配置*******************************#
#mysql数据库驱动(mariadb适用)
driverClassNameMysql=com.mysql.jdbc.jdbc2.optional.MysqlXADataSource

#mariadb数据库用户名
usernameMysql=root
#mariadb数据库用户密码
passwordMysql=123456
#mariadb数据库链接URL
urlMysql=jdbc:mysql://127.0.0.1:3300/ssb_test?useUnicode=true&amp;characterEncoding=UTF-8

#mariadb数据库用户名
#usernameMymssql=root
#mariadb数据库用户密码
#passwordMymssql=123456
#mariadb数据库链接URL
#urlMymssql=jdbc:mysql://192.168.0.231:3300/ssb_test2?useUnicode=true&amp;characterEncoding=UTF-8

#******************连接池中其他属性设置*********************#
#Atomikos连接池的最小、最大连接数，默认全部1
minPoolSize = 5
maxPoolSize = 100

#Atomikos连接池中连接的最大空闲时间，单位为秒，默认为60秒
maxIdleTime = 120